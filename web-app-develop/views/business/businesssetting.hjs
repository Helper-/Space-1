        <!--[if lte IE 9]><link rel="stylesheet" href="assets/css/ie9.css" /><![endif]-->
    </head>

    <body class="contact">
        <div id="page-wrapper">

            <!-- Header -->
      <header id="header">
        <h1 id="logo">Breeze <span>by Space-1</span></a></h1>
        <nav id="nav">
          <ul>
            <li class="current"><a href="/dashboard" class="button">Dashboard</a></li>

            <li class="submenu">
              <a href="#">Settings</a>
              <ul>
                <li><a href="/addemployees">Employees</a></li>
                <li><a href="/manageforms">Manage Forms</a></li>
                <li><a href="/setdisclosure">Add Disclosure Agreements</a></li>
                <li><a href="/customizetheme">Customize Theme</a></li>
                <li><a href="/accountSettings">Account Settings</a></li>
                <li><a href="/businesssetting">Company Settings</a></li>
              </ul>
            </li>

            <li><a href="/api/auth" class="button special">Logout</a></li>
          </ul>
        </nav>
      </header>

            <!-- Main -->
                <article id="main">

                    <header class="special container">
                        <span class="icon featured fa-laptop"></span>
                        <h2>Company Settings</h2>
                        <p>Change the name and phone number of your company displayed</p>
                    </header>

                    <!-- One -->
                        <section class="wrapper style4 special container 50%">

                            <!-- Content -->

                                <div class="content">
                                    
                                    <form class="form" action="" method="post">
                                        <div class="row">
                                          <div class="12u 12u">
                                            <div class="form-group">
                                              <label for="email">Company Name</label>
                                              <input type="text" id="companyName" name="companyName" class="form-control input-lg" value="{{companyName}}">
                                            </div>
                                          </div>
                                        </div>
                                        <div class="row">
                                          <div class="12u 12u">
                                            <div class="form-group">
                                              <label>Phone Number </label>
                                              <input type="text" id="phone" name ="phone"class="form-control input-lg" value="{{phone}}">
                                            </div>
                                          </div>
                                        </div>
                                        <br />
                                        <button type="submit" class="button special">Save</button>
                                      </form>
                                </div>

                        </section>

                </article>

            <!-- Footer -->
                <footer id="footer">
                    <ul class="copyright">
                        <li>Space-1 &copy;2016</li>
                    </ul>
                </footer>

        </div>

    <!-- Scripts -->
            <script src="/js/jquery.min.js"></script>
