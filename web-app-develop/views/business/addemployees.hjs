<!DOCTYPE html>
<html>
<head>
    <title>{{ title }}</title>
    <link href='http://fonts.googleapis.com/css?family=Lato' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
    <link rel='stylesheet' href='/stylesheets/style.css'>
    {{#newrelic}}
        {{{ newrelic.getBrowserTimingHeader }}}
    {{/newrelic}}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>
</head>

<body>
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="navbar-header">
        <a class="navbar-brand" href="#" onclick='location.reload(true); return false;'>
            <img id = "company-logo" src="images/logo.png">
        </a>
      </div>
      <div class="navbar-padding-right">
        <ul class="nav navbar-nav navbar-right navbar-padding">
            <li><a href="/dashboard">Dashboard</a></li>
            <li class="active"><a href="/addemployees">Employees</a></li>
            <li>
                <a href="/customizetheme">Settings</a>
            </li>
            <li><a href="/businesssetting">Company Name</a></li>
        </ul>
        </div>
    </nav>
    
    <div class="container container-margin">
            <!-- <div class="row">
                <div class="col-xs-offset-1 col-xs-4">
                    <h2>Register Employees</h2>
                    <h4>Register all your employee(s) through a CSV file!</h4>
                </div>
            </div> -->

            <div class="container container-margin">
                <div class="row">
                    <div class="col-xs-offset-1 col-xs-4">
                        <h2>Register Employee</h2>
                    </div>
                </div>
                <div class="outerAlign" >
                <div align = "center">
                <div class="row text-center" id="regis-container">
                    <!-- <div class="col-xs-offset-1 col-xs-4" id="form-separator"> -->
                        <form method="post" action="addemployees" enctype="application/x-www-form-urlencoded">
                            <input class="regis" type="text" name="companyName" value="{{ companyName }}" placeholder="COMPANY NAME" required>
                            <input class="regis" type="text" name="fname" value="{{ fname }}" placeholder="FIRST NAME" required>
                            <input class="regis" type="text" name="lname" value="{{ lname }}" placeholder="LAST NAME" required>
                            <input class="regis" type="email" name="email" value="{{ email }}" placeholder="EMAIL" required>
                            <input class="regis" type="tel" name="phone" value="{{ phone }}" placeholder="PHONE NUMBER" required>
                            <input class="regis" type="password" name="password" value="{{ password }}" placeholder="PASSWORD" required>
                            <input class="btn custom-button" name="submit" type="submit" href="/addemployees" value="Register">
                        </form>
                    <!-- </div> -->
                    
                </div>
                </div>
                </div>
             </div>

            <div class="row text-center" id="regis-container">
                <!-- <form method="post" action="addemployees" enctype="application/x-www-form-urlencoded">
                    <textarea class="add-email" type="text" name="csvEmployees" placeholder="CSV of Employees EMAILS" required></textarea>
                    <input class="btn custom-button" name="submit" type="submit" href="/addemployees" value="Upload">
                </form> -->

                <div class="outerAlign" >

                    <h3 class="tableheader">Employees already registered</h2>

                        <div class="tableheader">

                            <table class="table table-hover tablewidth" id="registeredEmployees">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Role</th>
                                    </tr>
                                </thead>
                                {{#signed}}
                                <tr>
                                    <td>{{fname}} {{lname}}</td>
                                    <td>{{email}}</td>
                                    <td>{{role}}</td>
                                </tr>
                                {{/signed}}
                            </table>

                        </div>


                        <h3 class="tableheader">Employees not yet registered</h2>

                        <div class="tableheader">

                            <table class="table table-hover tablewidth" id="unregisteredEmployees">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Email</th>
                                    </tr>
                                </thead>

                                {{#notsigned}}
                                <tr>
                                    <td>{{fname}} {{lname}}</td>
                                    <td>{{email}}</td>
                                </tr>
                                {{/notsigned}}
                            </table>

                        </div>

                        </div>
                </div>
            </div>
    </div>



</body>
</html>
