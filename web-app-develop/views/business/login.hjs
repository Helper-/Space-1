<!DOCTYPE html>
<html>
<head>
    <title>{{ title }}</title>
    <link href='http://fonts.googleapis.com/css?family=Lato' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
    <link rel='stylesheet' href='/stylesheets/style.css'/>
    {{#newrelic}}
        {{{ newrelic.getBrowserTimingHeader }}}
    {{/newrelic}}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>
</head>

<body>
<nav class="navbar navbar-default navbar-fixed-top">
    <div class="navbar-header">
        <a class="navbar-brand" href="/">
            <!-- hardcoded directory value for logo (images/corner.gif) -->
            <img id = "company-logo" src="images/corner.gif">
        </a>
    </div>
    <div class="navbar-padding-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <p class="navbar-btn">
                   <a href="/login" class="btn custom-button" id="login-btn-navbar">Log In</a>
               </p>
            </li>
        </ul>
    </div>
</nav>
<!--Main Part that needs styling-->



<div class="container container-margin">
    <!-- hardcoded directory value for center screen image (images/ipad.png) -->
    <img class="custom-center" id="login-image" src="images/ipad.png" style="width:180px;height:180px;"/>
    <br><br> <!-- line break -->

    <form class="form-horizontal" action="login" method="post">
        <div class="form-group">
            <!-- class="col-md-4" contols length -->
            <label for="email" class="col-md-4 control-label">Email</label>
            <!-- div class="col-sm-5" controls position -->
            <div class="col-sm-5">
                <input type="email" class="form-control" id="email" name="email" placeholder="Email" required>
            </div>
        </div>

        <div class="form-group">
            <!-- class="col-md-4" contols length -->
            <label for="password" class="col-sm-4 control-label">Password</label>
            <!-- div class="col-sm-5" controls position -->
            <div class="col-sm-5">
                <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-5 col-sm-10">
                <!-- style modifies location of the button -->
                <button type="submit" class="btn custom-button" style="margin-top:10px;margin-left:10px">Sign in</button>
            </div>
        </div>
    </form>
</div>
{{#message}}
   <div class="alert alert-danger">{{message}}</div>
{{/message}}


<footer class="footer navbar-fixed-bottom">
    <div class="container">
        <ul class="list-inline footer-links text-center">

            <!--<li><a href="">About Us</a></li>
            <li><a href="">Store</a></li>
