<!DOCTYPE HTML>
<html>
  <head>
    <title>Breeze - Dashboard</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!--[if lte IE 8]><script src="assets/js/ie/html5shiv.js"></script><![endif]-->
    <link rel='stylesheet' href='/stylesheets/main.css'/>
    <!--[if lte IE 8]><link rel="stylesheet" href="assets/css/ie8.css" /><![endif]-->
    <!--[if lte IE 9]><link rel="stylesheet" href="assets/css/ie9.css" /><![endif]-->
  </head>
  <body class="no-sidebar">
    <div id="page-wrapper">
      <!-- Header -->
      <header id="header">
        <h1 id="logo">Breeze <span>by Space-1</span></a></h1>
        <nav id="nav">
          <ul>
            <li class="current"><a href="/dashboard" class="button">Dashboard</a></li>
            <!-- Create Appointment Pop-up-->
            <li class="current"><a href="#openModal">Create Appointment</a>
            <div id="openModal" class="modalDialog">
              <div>
                <a href="#close" title="Close" class="close">X</a>
                <h2 style="text-align:center">Create Appointment</h2>
                <div class="content">
                  <form method="post" action="" enctype="application/x-www-form-urlencoded">
                    <!-- First Row -->
                    <div class="row 50%">
                      <div class="6u 12u(mobile)">
                        <input class="regis" type="text" name="fname" value="{{ fname }}" placeholder="First Name" required />
                      </div>
                      <div class="6u 12u(mobile)">
                          <input class="regis" type="text" name="lname" value="{{ lname }}" placeholder="Last Name" required>
                      </div>
                    </div>
                    <!-- Second Row -->
                    <div class="row 50%">
                        <div class="12u">
                           <input class="regis" type="text" name="phone" value="{{ phone }}" placeholder="Phone Number" required>
                        </div>
                    </div>
                    <!-- DAY (DD) / MONTH (MMM) / YEAR (YYYY) -->
                    <div class="row 50%">
                      <div class="12u"><center>
                        <select>
                          <option value = "{{ date }}"> 01 </option>
                          <option value = "{{ date }}"> 02 </option>
                          <option value = "{{ date }}"> 03 </option>
                          <option value = "{{ date }}"> 04 </option>
                          <option value = "{{ date }}"> 05 </option>
                          <option value = "{{ date }}"> 06 </option>
                          <option value = "{{ date }}"> 07 </option>
                          <option value = "{{ date }}"> 08 </option>
                          <option value = "{{ date }}"> 09 </option>
                          <option value = "{{ date }}"> 10 </option>
                          <option value = "{{ date }}"> 11 </option>
                          <option value = "{{ date }}"> 12 </option>
                          <option value = "{{ date }}"> 13 </option>
                          <option value = "{{ date }}"> 14 </option>
                          <option value = "{{ date }}"> 15 </option>
                          <option value = "{{ date }}"> 16 </option>
                          <option value = "{{ date }}"> 17 </option>
                          <option value = "{{ date }}"> 18 </option>
                          <option value = "{{ date }}"> 19 </option>
                          <option value = "{{ date }}"> 20 </option>
                          <option value = "{{ date }}"> 21 </option>
                          <option value = "{{ date }}"> 22 </option>
                          <option value = "{{ date }}"> 23 </option>
                          <option value = "{{ date }}"> 24 </option>
                          <option value = "{{ date }}"> 25 </option>
                          <option value = "{{ date }}"> 26 </option>
                          <option value = "{{ date }}"> 27 </option>
                          <option value = "{{ date }}"> 28 </option>
                          <option value = "{{ date }}"> 29 </option>
                          <option value = "{{ date }}"> 30 </option>
                          <option value = "{{ date }}"> 31 </option> 
                        </select>

                        <select>
                          <option value = "{{ month }}"> JAN </option>
                          <option value = "{{ month }}"> FEB </option>
                          <option value = "{{ month }}"> MAR </option>
                          <option value = "{{ month }}"> APR </option>
                          <option value = "{{ month }}"> MAY </option>
                          <option value = "{{ month }}"> JUN </option>
                          <option value = "{{ month }}"> JUL </option>
                          <option value = "{{ month }}"> AUG </option>
                          <option value = "{{ month }}"> SEP </option>
                          <option value = "{{ month }}"> OCT </option>
                          <option value = "{{ month }}"> NOV </option>
                          <option value = "{{ month }}"> DEC </option> 
                        </select>

                        <select>
                          <option value = "{{ year }}"> 2016 </option>
                          <option value = "{{ year }}"> 2017 </option>
                          <option value = "{{ year }}"> 2018 </option>
                          <option value = "{{ year }}"> 2019 </option>
                          <option value = "{{ year }}"> 2020 </option>
                          <option value = "{{ year }}"> 2021 </option>
                          <option value = "{{ year }}"> 2022 </option>
                          <option value = "{{ year }}"> 2023 </option>
                          <option value = "{{ year }}"> 2024 </option>
                          <option value = "{{ year }}"> 2025 </option>
                          <option value = "{{ year }}"> 2026 </option>
                          <option value = "{{ year }}"> 2027 </option>
                          <option value = "{{ year }}"> 2028 </option>
                          <option value = "{{ year }}"> 2029 </option>
                          <option value = "{{ year }}"> 2030 </option>
                          <option value = "{{ year }}"> 2031 </option>
                          <option value = "{{ year }}"> 2032 </option> 
                        </select>
                      </div>
                    </div>
                    <!-- HOUR (HH) / MIN (MM) / DAYNIGHT (AM/PM) -->
                    <div class="row 50%">
                      <div class="12u">
                        <center>
                          Time:
                          <select>
                            <option value = "{{ hour }}"> 01 </option>
                            <option value = "{{ hour }}"> 02 </option>
                            <option value = "{{ hour }}"> 03 </option>
                            <option value = "{{ hour }}"> 04 </option>
                            <option value = "{{ hour }}"> 05 </option>
                            <option value = "{{ hour }}"> 06 </option>
                            <option value = "{{ hour }}"> 07 </option>
                            <option value = "{{ hour }}"> 08 </option>
                            <option value = "{{ hour }}"> 09 </option>
                            <option value = "{{ hour }}"> 10 </option>
                            <option value = "{{ hour }}"> 11 </option>
                            <option value = "{{ hour }}"> 12 </option>
                          </select>

                          <select>
                            <option value = "{{ min }}"> 00 </option>
                            <option value = "{{ min }}"> 15 </option>
                            <option value = "{{ min }}"> 30 </option>
                            <option value = "{{ min }}"> 45 </option>
                          </select>

                          <select>
                            <option value = "{{ daynight }}"> AM </option>
                            <option value = "{{ daynight }}"> PM </option>
                          </select>
                        </center>
                      </div>
                    </div>
                    <!-- Submit Button -->
                    <div class="row 50%">
                      <div class="12u">
                        <center>
                          <input class="button special" name="submit" type="submit" href="/add-appointment" value="Create Appointment">
                        </center>
                      </div>
                    </div>
                  </form>
                </div>
              </div>
                  <!-- Check-in button to go to check-in-->
              <li class="current"><a href="/dashboard" class="button">Check-In Mode</a></li>

              <li class="submenu">
                <a href="#">Settings</a>
                <ul>
                  <li><a href="/addemployees">Employees</a></li>
                  <li><a href="/manageforms">Manage Forms</a></li>
                  <li><a href="/setdisclosure">Disclosure Agreements</a></li>
                  <li><a href="/customizetheme">Customize Theme</a></li>
                  <li><a href="/accountSettings">Account Settings</a></li>
                  <li><a href="/businesssetting" >Company Settings</a></li>
                </ul>
              </li>
              <li><a href="/login" class="button special">Logout</a></li>
          </ul>
        </nav>
      </header>
      <!-- Main -->
      <article id="main">
        <header class="special container">
          <span class="icon fa-clock-o"></span>
          <h2><strong>Hi, {{employeeName}} {{employeeID}}!</strong></h2>
          <h1 class="text-center" id="currentDate"></h1>
        </header>
        <!-- One -->
        <section class="wrapper style4 container">
          <!-- Content -->
          <div class="content">
            <div class="row">
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th></th>
                    <th>Appointment Time</th>
                    <th>Status</th>
                    <th></th>
                    <th>Picture</th>
                    <th></th>
                  </tr>
                </thead>
                <tbody id="tblBody">
                  <tr>
                    <td>1</td>
                    <td></td>
                    <td></td>
                    <td> </script></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </section>
      </article>
      <!-- Footer -->
      <footer id="footer">
        <ul class="copyright">
          <li>Space-1 &copy;2016</li>
        </ul>
      </footer>
