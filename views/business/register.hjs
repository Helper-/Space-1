<html>
    <head>
        <title>Breeze - Register</title>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <!--[if lte IE 8]><script src="assets/js/ie/html5shiv.js"></script><![endif]-->
        <link rel="stylesheet" href="stylesheets/main.css" />
        <!--[if lte IE 8]><link rel="stylesheet" href="assets/css/ie8.css" /><![endif]-->
        <!--[if lte IE 9]><link rel="stylesheet" href="assets/css/ie9.css" /><![endif]-->

        <script type = "text/javascript">
            function showMessage() {
                alert ("Form submitted - Thank you!");
                return true;
            }
        </script>
    </head>

    <body class="contact">
        <div id="page-wrapper">

            <!-- Header -->
                <header id="header">
                    <h1 id="logo"><a href="/">Breeze <span>by Space-1</span></a></h1>
                    <nav id="nav">
                        <ul>
                            <li><a href="/login" class="button special">Log In</a></li>
                        </ul>
                    </nav>
                </header>

            <!-- Main -->
                <article id="main">

                    <header class="special container">
                        <span class="icon featured fa-laptop"></span>
                        <h2>Register For Breeze</h2>
                    </header>

                    <!-- One -->
                        <section class="wrapper style4 special container 50%">

                            <!-- Content -->

                                <div class="content">
                                    <form method="post" action="" enctype="application/x-www-form-urlencoded"
                                        onSubmit = "return showMessage()">


                                        <!-- First Row -->
                                        <div class="row 50%">
                                            <div class="6u 12u(mobile)">
                                                <input class="regis" type="text" name="fname" value="{{ fname }}" placeholder="First Name" required />
                                            </div>

                                            <div class="6u 12u(mobile)">
                                                <input class="regis" type="text" name="lname" value="{{ lname }}" placeholder="Last Name" required>
                                            </div>

                                        </div>

                                        <!-- Second Row -->
                                        <div class="row 50%">
                                            <div class="12u">
                                               <input class="regis" type="text" name="companyName" value="{{ companyName }}" placeholder="Company Name" required>
                                            </div>
                                        </div>

                                        <!-- Third Row -->
                                        <div class="row 50%">
                                            <div class="12u">
                                               <input class="regis" type="text" name="phone" value="{{ phone }}" placeholder="(123) 345-6789" required>
                                            </div>
                                        </div>

                                        <!-- Fourth Row -->
                                        <div class="row 50%">
                                            <div class="12u">
                                                <input class="regis" type="email" name="email" value="{{ email }}" placeholder="Email Address" required>
                                            </div>
                                        </div>

                                        <!-- Fifth Row -->
                                        <div class="row 50%">
                                            <div class="12u">
                                                <input class="regis" type="password" name="password" value="{{ password }}" placeholder="Password" required>
                                            </div>
                                        </div>

                                        <!-- Sixth Row -->
                                        <div class="row 50%">
                                            <div class="12u">
                                                <input class="regis" type="password" name="confirm_password" value="{{ confirm_password }}" placeholder="Confirm_Password" required>
                                            </div>
                                        </div>

                                        <!-- Seventh Row -->
                                        <div class="row 50%">
                                          <div class="12u 12u(mobile)">
                                            <h2>Company Logo</h2>
                                            <form id="uploadLogo" enctype="multipart/form-data" action='/customizetheme'
                                              method="post">
                                            <input type="file" name="userLogo">
                                          </form>
                                          </div>
                                        </div>

                                        <!-- Eight Row -->
                                        <div class="row 50%">
                                          <div class="12u 12u(mobile)">
                                            <form id="uploadBG" enctype="multipart/form-data" action='/customizetheme'
                                              method="post">
                                            <h2>Company Background</h2>
                                            <input type="file" name="userBG">
                                          </form>
                                          </div>
                                        </div>

                                        <!-- Sign Up -->
                                        <div class="row">
                                            <div class="12u">
                                                <ul class="buttons">
                                                    <input class="special" value="Register" name="submit" type="submit" />
                                                </ul>
                                            </div>
                                        </div>
                                    </form>
                                </div>

                        </section>

                </article>

            <!-- Footer -->
                <footer id="footer">
                    <ul class="copyright">
                        <li>Space-1 &copy;2016</li>
                    </ul>
                </footer>

        </div>

        <!-- Scripts -->
            <script src="/js/jquery.min.js"></script>
            <script src="/js/jquery.dropotron.min.js"></script>
            <script src="/js/jquery.scrolly.min.js"></script>
            <script src="/js/jquery.scrollgress.min.js"></script>
            <script src="/js/skel.min.js"></script>
            <script src="/js/util.js"></script>
            <!--[if lte IE 8]><script src="assets/js/ie/respond.min.js"></script><![endif]-->
            <script src="/js/main.js"></script>

    </body>
</html>
