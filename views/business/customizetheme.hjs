<!DOCTYPE html>
<html>
<head>
    <title>Breeze - Customize Theme</title>
    <link href='http://fonts.googleapis.com/css?family=Lato' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
    <link rel='stylesheet' href='/stylesheets/main.css'/>
</head>

<body class="no-sidebar">
    <div id="page-wrapper">

  <!-- Header -->
    <header id="header">
      <h1 id="logo">Breeze <span>by Space-1</span></a></h1>
      <nav id="nav">
        <ul>
          <li class="current"><a href="/dashboard" class="button">Dashboard</a></li>

          <li class="submenu">
            <a href="#">Settings</a>
            <ul>
              <li><a href="/addemployees">Employees</a></li>
              <li><a href="/manageforms">Manage Forms</a></li>
              <li><a href="/setdisclosure">Disclosure Agreements</a></li>
              <li><a href="/customizetheme">Customize Theme</a></li>
              <li><a href="/accountSettings">Account Settings</a></li>
              <li><a href="/businesssetting" >Company Settings</a></li>
            </ul>
          </li>

          <li><a href="/login" class="button special">Logout</a></li>
        </ul>
      </nav>
    </header>

    {{#message}}
   <div class="alert alert-danger">{{message}}</div>
    {{/message}}

  <article id="main">

    <header class="special container">
                <span class="icon fa-laptop"></span>
                <h2><strong>Customize Theme</strong></h2>
                <p>Change your look!</p> <br />
    </header>

<div class="content">

    <div class="row" style="text-align:center">

        <div class="6u 12u(mobile)">
          <!--  {{#logo}} -->
            <h3>Current Logo</h3>
            <img class="bgImage" src="{{logo}}" alt="Company's Logo"/>
            <br/>
            <!-- Upload Logo -->
            <a type="button" class="button" href="#openModal">Customize My Logo</a>
              <div id="openModal" class="modalDialog">

                  <div class="content">
                    <div>
                      <a href="#close" title="Close" class="close">X</a>
                    </div>

                    <h2 style="text-align:center">Upload Logo</h2>
                      <form method="post" action="" enctype="application/x-www-form-urlencoded">
                                      <!-- First Row -->
                        <div class="row 50%">
                          <div class="6u 12u(mobile)">
                            <input class="regis" type="text" name="fname" value="{{ fname }}" placeholder="First Name" required />
                          </div>

                          <div class="6u 12u(mobile)">
                            <input class="regis" type="text" name="lname" value="{{ lname }}" placeholder="Last Name" required>
                          </div>
                        </div>
                      </form>
                </div>
              </div>

          <!--  {{/logo}} -->
        </div>

        <div class="6u 12u(mobile)">
            <h3>Current Background Image</h3>
            <img class="bgImage" src="{{bg}}" alt="Company's Custom Background Image"/>
            <br/>
            <!-- Upload BG-->
            <a type="button" class="button" href="#openModal">Customize My Background</a>
              <div id="openModal" class="modalDialog">

                  <div class="content">
                    <div>
                      <a href="#close" title="Close" class="close">X</a>
                    </div>

                    <h2 style="text-align:center">Upload Background</h2>
                      <form method="post" action="" enctype="application/x-www-form-urlencoded">
                                      <!-- First Row -->
                        <div class="row 50%">
                          <div class="6u 12u(mobile)">
                            <input class="regis" type="text" name="fname" value="{{ fname }}" placeholder="First Name" required />
                          </div>

                          <div class="6u 12u(mobile)">
                            <input class="regis" type="text" name="lname" value="{{ lname }}" placeholder="Last Name" required>
                          </div>
                        </div>
                      </form>
                </div>
              </div>
        </div>

    </div>
</div>
</article>

    <!--Footer to display the about info,etc-->
        <footer id="footer">
          <ul class="copyright">
            <li>Space-1 &copy;2016</li>
          </ul>
        </footer>

</div>


<!-- Scripts -->
  <script src="/js/jquery.min.js"></script>
  <script src="/js/jquery.dropotron.min.js"></script>
  <script src="/js/jquery.scrolly.min.js"></script>
  <script src="/js/jquery.scrollgress.min.js"></script>
  <script src="/js/skel.min.js"></script>
  <script src="/js/util.js"></script>
  <script src="/js/main.js"></script>
  <script src="/javascripts/customizetheme.js"></script>
<script>
  eid = "{{eid}}";
</script>
</body>

</html>
